source "https://rubygems.org"
ruby '2.0.0'

# Web
gem "sinatra"
gem "sinatra-contrib"
gem "sinatra-support"
gem "puma"
gem 'rack-google-analytics'
gem 'activesupport', '~> 3.1.0'

# Monitoring
gem 'newrelic_rpm'

# Asset management
gem 'sprockets'
gem 'sprockets-helpers'
gem 'sprockets-sass'
gem "closure-compiler"
gem "csso-rails"

# Views
gem "haml"
gem "sass", :require => "sass"
gem "compass"

# Mails
gem 'gibbon'
gem 'intercom'
gem 'mandrill-api', :require => "mandrill"

group :development do
	gem 'sinatra-reloader'
end
