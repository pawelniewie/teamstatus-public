                %span.currency $
                %span.digits
                  49
                  %span .95
                %span.term /MO
              %ul.unstyled.points
                %li 50 User Accounts
                %li 50 Private Projects
                %li Umlimited Public Projects
                %li Unlimited space
              %a.btn.btn-primary Sign Up
          .col-sm-4.col-md-3
            .well
              %h3.title
                Starter
                %span.fancy Plus
              %p.price
                %span.currency $
                %span.digits
                  19
                  %span .95
                %span.term /MO
              %ul.unstyled.points
                %li 10 User Accounts
                %li 10 Private Projects
                %li Umlimited Public Projects
                %li 15GB of space
              %a.btn.btn-primary Sign Up
        .row
          / Plan features
          .well.well-mini.pull-center
            %h4.inline-el.pad-right
              %span
                All Plans
                = succeed ":" do
                  %span.de-em Include
            %p.inline-el.pad-left.muted
              90 day money back guarantee
              %span.spacer //
              24/7 telephone support
